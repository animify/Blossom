ifExists(getFilename(),$theme);
$background-color = $color-grey-light;
$border-color = $color-border;
$border-radius = $border-radius-m;
$border-width = 6px;
$color = $color-text-body;
$line-height = $line-height;
$margin = 1rem 0;
$padding = 1rem 1.5rem;

styleColored(type)
    border-color: lookup('$color-border-' + type);
    background-color: lighten(@border-color,90%);
    color: darken(@border-color,45%);

    h5
        color: darken(@border-color,60%);

.message
    margin: $margin;
    padding: $padding;
    border: 0;
    border-left: $border-width solid $border-color;
    border-radius: $border-radius;
    background-color: $background-color;
    color: $color;
    line-height: $line-height;

    &.warning
        styleColored('warning');

    &.important
        styleColored('important');

    &.success
        styleColored('success');

    &.info
        styleColored('info');

    a
        color: inherit;
        text-decoration: underline;
