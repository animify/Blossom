@import 'jeet'
@import 'nib'
@import 'rupture'
@import 'light/variables'

#app
	width 100%
	min-height 100%
	height 100%
	& > div
		width 100%
		height 100%

.main-content
	&:before
		width 100%
		fixed top left
		content ''
		background linear-gradient(top right, color-pink, color-violet)
		z-index 4000
		height 2px
	padding-top 108px
	position relative
	min-height 100%
	width 100%
	.page
		font-size 1em
		span(1/1)
		padding-bottom 110px

.hero
	text-align center
	padding 3em 0 7em 0
	relative top left
	min-height 100%
	height 100%
	background-color #fff
	width 100%
	border-bottom 1px solid border-gray
	h1
		font-size 3.8em
		margin-top .3em
		font-weight 600
	h3
		margin .3em 0
		font-weight 300
	.button-group
		margin-top 1.8em
		& > *
			margin-left .8em

.icons
	background url('../examples/icons.jpg') repeat
	background-size cover
	cf()
	height 482px
	animation bgscroll 170s linear infinite
	&overlay
		height 100%
		width 100%
		content ''
		background-color rgba(0,0,0,.7)
		position relative
		.centered
			text-align center
			color #fff
		.fa-large
			font-size 3em
			color #fff
			margin 0 0 .6em 0
		h5
			font-weight 300
			margin .8em 0
			line-height 1.4em
			opacity .8
			font-size 1.2em
			a
				color #fff
				position relative
				display inline-block
				&:after
					content ''
					border-bottom 1px dashed #fff
					display block
				&:hover
					&:after
						border-bottom 1px solid #fff
					cursor pointer
		.button.outlined
			margin .6em 0 0 0
			font-size 1.2em

.features
	cf()
	border-top 1px solid border-gray
	.row
		display flex
		position relative
		flex-direction row
		flex-wrap wrap
		align-items stretch

.about
	padding 5em 0
	h3
		margin 0 0 0.6em 0
	p
		color text-lighter-grey
		width 80%
		display block
		margin 0 auto
		font-size 1.15em
		line-height 1.6em

.grid
	cf()
	padding 4em 0
	background-color background-lightest-gray

.column
	display flex
	flex-direction column
	text-align center
	margin 3em 0
	padding 0 2em
	& + .column
		border-left 1px solid border-gray
	h4
		font-weight 400
		margin 0 0 .6em 0
	p
		flex 1 0 auto
		margin 0 0 1.4em 0
		color text-lighter-grey
	.button
		flex-grow 0

@keyframes bgscroll
	100%
		background-position 0 -5384px

.block-grey
	width 100%
	height 3em
	background-color color-smoke
	border-radius 4px
	display block

.show-grid > [class^='clm-']
	padding-top 15px

.show-tables > .table
	margin 20px 0

.show-input > .input
	margin 10px 0

.show-cards
	margin 12px 0
	& > .card:not(.fluid)
		margin-right 20px

.show-lists > .list
	margin 20px 0 0 0

.show-progress > .progress
	margin 6px 0

.y-block
	background-color #FFC82C
	width 100px
	height 100px
	border-radius 3px
	display block
	content ''

.opening-message
	margin -1.9em 0 1.8em 0

.message + .module.collapsed
	margin-top 1em

.module
	.antiScroll
		small
			color text-lightest-grey
			display block
			margin .8em 0 1em 0
			font-weight 300
		& + .antiScroll
			border-top 1px solid border-gray
.example
	&:hover
		.view-source
			display block !important
	& + .example
		margin-top 40px
		padding-top 40px
		border-top 1px solid border-gray
	.grid-row
		[class^='clm-']
			margin 6px 0
	&.types
		.progress + .progress
			margin-top 14px
	&.dropdowns
		.stack + .stack
			margin-top 14px
	.message
		margin 0
	&.animations
		.group
			border 1px solid border-gray
			span(1/1)
			border-radius border-radius-normal
	.animation
		display inline-block
		padding 1.4em 1.4em 3.45em 1.4em
		position relative
		overflow hidden
		span(1/3)
		& + .animation
			border-left 1px solid border-gray
		&:nth-child(4n)
			border-left 0
			border-top 1px solid border-gray
		&:nth-child(5n)
			border-top 1px solid border-gray
		&:nth-child(6n)
			border-top 1px solid border-gray
		code
			absolute bottom left
			width 100%
			display block
			padding .7em 0
			text-align center
			margin 0
			color text-lighter-grey
			background-color light-color-smoke
			font-size .875em
			border-radius 0
	.circle
		border-radius 50%
		height 4em
		width 4em
		background-color color-violet
		content ''
		display block
		margin 0 auto
		&:hover
			transform scale(1.2)
	.square
		border-radius 5px
		height 4em
		width 4em
		background-color color-yellow
		content ''
		display block
		margin 0 auto
	&.layout
		.block-grey
			width 100px
			height 100px
		.relative
			width 100%
			height 300px
	&.typeface
		.module
			padding 1.6em 1.8em
			p
				letter-spacing .3em
				font-size 1.1em
				& + p
					margin-top 1.3em
	&.alignment, &.transformtext
		.module
			p
				padding .7em
	&.stages
		margin-top 20px
	&.images > [class^='image-']
		& + span
			margin-left 9px
	&.labels
		.label + .label
			margin-left 8px
	&.loaders
		.module
			img + img
				margin-top 2em
			.hold
				align(both)
	.cards
		.card
			margin-top 12px
		& > .card:not(.fluid)
			margin-right 20px
	.explanation
		margin-bottom 15px
		position relative
		.view-source
			color text-grey
			display none
			cursor pointer
			font-size 1.1em
			absolute top right
			&:hover
				color color-primary
				opacity 1
		h6
			font-size 1.1em
		p
			color text-lighter-grey
			margin 6px 0 0 0
			display block
			line-height 1.3em
			& + p
				margin 3px 0 0 0
	&.buttons
		.button
			margin .34em .6em .34em 0
	&.showing
		.view-source
			display block
			color color-primary
			opacity .5
.schemes
	display inline-flex
	flex-direction row
	align-items flex-start
	&.dark
		.scheme
			color text-grey
	& + .schemes
		margin-top 20px
	.scheme
		justify-content flex-start
		padding 1em
		display flex
		flex 1 0 auto
		content ''
		color #fff
		flex-wrap wrap
		vertical-align center
		position relative
		align-items stretch
		width 180px
		p
			display block
			span(1/1)
		span
			opacity .7
			margin 4px 0 0 0
			text-transform uppercase
		&:first-child
			border-radius border-radius-normal 0 0 border-radius-normal
		&:last-child
			border-radius 0 border-radius-normal border-radius-normal 0

.breakpoints .module
	p
		& + p
			margin-top 8px

.module
	transition all 100ms cubic-bezier(0.16, 0.86, 0.44, 1)
	&.collapsed
		border 0
		box-shadow none !important
		padding 0
		margin 0
		.footer:not(.content)
			display none
	.footer
		pre
			background-color light-color-smoke
			margin 1em -1em -1em -1em
			border-radius 0 0 border-radius-normal border-radius-normal
			padding 0
			border-top 1px solid border-gray
			tab-size 4
			overflow auto
		code
			padding 1em
			margin 0
			background-color transparent

.sidebar.top, .subbar
	background-color white
	border-bottom 1px solid border-gray
	padding 24px 0 22px 0
	z-index 2300
	.logo, .sub
		float left
		display inline-block
		vertical-align top
		img
			max-height 35px
			absolute top -9px
		p
			color #fff
			margin 0
	.links
		float right
		display inline-block
		vertical-align top
		& > *
			display inline-block
			vertical-align top
		li
			& + li
				margin-left 23px
			a
				color text-grey
				opacity 0.5
				cursor pointer
				&:hover
					opacity 0.7
			&.active
				a
					opacity 1

.subbar
	top 49px
	background-color color-ash
	padding 13px 0
	color #fff
	width 100%
	z-index 2200
	.sub
		font-size .9em

	.link
		font-size .9em
		margin 0
		padding 0
		line-height 1em
		float right
		a
			color #fff
			opacity .6
			&:hover
				opacity 1
			i
				margin-right 4px

aside.sidebar
	width 30%
	max-width 170px
	absolute left 1em
	float right
	h6
		margin 0 0 .5em 0
	li
		padding .4em 0
		display block
		&.active
			a
				color color-primary
				opacity 1
		a
			color text-grey
			opacity .6

.sidebar
	& + .page
		padding-left 210px
		+below('m')
			padding-left 0

.outer-title
	span(1/1)
	border-bottom 1px solid border-gray
	padding-bottom 28px
	margin-bottom 40px
	h4
		font-weight 400
	p
		color text-lighter-grey
		margin-top 11px

footer.footer
	margin-top 2em
	span(1/1)
	absolute bottom 1em left
	.madeby a
		&:hover
			color dark-color-grey
	.aotik
		position relative
		display inline-block
		&:after
			content ''
			border-bottom 1px dashed color-grey
			display block
	& .inner
		padding 1em 0
		border-top 1px solid border-gray
		.links
			li a
				font-size .875em

.homepage
	& + footer.footer
		position static
		margin 0
		& .inner
			border 0
			padding 2em 0
